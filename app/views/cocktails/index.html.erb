<h1>See all the cocktails</h1>
<% if @cocktails.empty? %>
  <p>No cocktail for now.</p>
<% else %>
  <ul>
    <% @cocktails.each do |cocktail| %>
      <li>
        <%= link_to cocktail.name, cocktail_path(cocktail) %>
      </li>
    <% end %>
  </ul>
<% end %>
<%= link_to "Create new cocktail", new_cocktail_path, class:'btn btn-primary' %>
